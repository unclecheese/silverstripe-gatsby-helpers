{
    "compilerOptions": {
      "module": "ES6",
      "target": "es2017",
      "jsx": "react",
      "lib": ["dom", "es2015", "es2017"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "alwaysStrict": false,
      "noImplicitUseStrict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "outDir": "lib",
    },
    "include": ["./src/**/*"]
  }